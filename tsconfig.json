{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["lib/**/*.ts", "bin/**/*.ts", "src/**/*.ts", "vite.config.ts"]
}
