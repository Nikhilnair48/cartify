{
    "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "nodenext",
      "target": "ESNext",
      "outDir": "dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "**/*.test.ts"],
    "include": [
      "lib/**/*.ts",
      "bin/**/*.ts",
      "src/**/*.ts"
    ]
}
 